# Server Configuration
NODE_ENV=production
PORT=4000

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/hrms?schema=public"

# Authentication
NEXTAUTH_SECRET=your-super-secret-key-min-32-characters-long
JWT_SECRET=your-jwt-secret-key-min-32-characters-long

# Frontend URL
FRONTEND_URL=https://yourdomain.com

# Email Service
EMAIL_SERVICE_URL=http://localhost:4007
EMAIL_SERVICE_AUTH_TOKEN=your_email_service_auth_token_min_32_chars

# CORS Origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging
LOG_LEVEL=info

# Upload Settings
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
